{
  "name": "h5-nes",
  "version": "0.1.0",
  "description": "NES 模擬器 - HTML5/TypeScript 實作",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:cpu": "vitest run --testPathPattern=cpu",
    "test:ppu": "vitest run --testPathPattern=ppu",
    "test:apu": "vitest run --testPathPattern=apu",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "keywords": ["nes", "emulator", "6502", "typescript", "html5"]
}
